<div class="input-component">
  {{#if label}}
    <label for="{{id}}" class="input-component__label">{{label}}</label>
  {{/if}}
  <input type="{{type}}" name="{{name}}" id="{{id}}" class="input-component__input">
  {{#if error}}
    <div class="input-component__error">{{error}}</div>
  {{/if}}
</div>