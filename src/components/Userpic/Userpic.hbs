<div
    class="userpic {{class}} {{#if withChange}}userpic--with-change{{/if}}"
    style="width: {{size}}px;height: {{size}}px;"
>
  {{#if src}}
    <img src="{{src}}"
         alt="{{alt}}"
         class="userpic__image"
         width="{{size}}"
         height="{{size}}">
  {{else}}
    <div class="userpic__placeholder"></div>
  {{/if}}
</div>