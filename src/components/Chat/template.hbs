<div class="chat {{className}}">
  {{#if chat}}
    <header class="chat__header">
      <div class="chat__header-column">
        {{#if isMobile}}
          {{{backButton}}}
        {{/if}}
        {{{userpic}}}
        <h2 class="chat__title">{{chat.title}}</h2>
      </div>
      <div class="chat__header-column">
        {{{addUserButton}}}
        {{{removeUserButton}}}
        {{{deleteChatButton}}}
      </div>
    </header>
    <main class="chat__content">
      {{#each messages}}
        <div class="chat__message">{{this.content}}</div>
      {{/each}}
    </main>
    <footer class="chat__footer">
      {{{messageForm}}}
    </footer>
    {{{addUserModal}}}
    {{{removeUserModal}}}
  {{else}}
    <div class="chat__placeholder"><span>Выберите чат, чтобы отправить сообщение</span></div>
  {{/if}}
</div>
